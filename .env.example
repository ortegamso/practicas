# Backend Configuration
NODE_ENV=development
PORT=4000
API_BASE_URL=http://localhost:4000/api

# Frontend Configuration (can also be in frontend/.env.local)
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_WEBSITE_NAME="Crypto Trading Platform"

# Database - TimescaleDB/PostgreSQL
POSTGRES_HOST=timescaledb
POSTGRES_PORT=5432
POSTGRES_DB=crypto_trading_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password # For development only, use secrets for production

# Database - MongoDB
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=ecommerce_db
MONGO_USER=root # For development only
MONGO_PASSWORD=secret # For development only

# Kafka
KAFKA_BROKERS=kafka:29092
KAFKA_CLIENT_ID=my-app
KAFKA_GROUP_ID=my-group

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD= # Optional

# JWT Configuration (Generate strong random strings for these)
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=1d

# API Keys (Examples - store actual keys securely)
BINANCE_API_KEY=your_binance_api_key
BYBIT_API_KEY=your_bybit_api_key
# Add other exchange API keys as needed

# Web3 Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Add other network RPC URLs as needed

# Referral System
MAX_REFERRAL_LEVELS=3

# Sandbox Configuration
SANDBOX_TIMEOUT_MS=30000 # 30 seconds

# Grafana (Optional - if you need to pass specific vars to Grafana container)
# GF_SECURITY_ADMIN_USER=admin
# GF_SECURITY_ADMIN_PASSWORD=admin
